<Page x:Class="PRAK5.AccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRAK5"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="AccountsPage" d:DesignHeight="386.853">
    <Grid>
        <DataGrid x:Name="AccountsDataGrid" Margin="0,0,0,237"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="35,203,0,0" VerticalAlignment="Top" Click="onAddAccount"/>
        <TextBox x:Name="LoginTextBox" HorizontalAlignment="Left" Margin="35,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="AccessLevelComboBox" HorizontalAlignment="Left" Margin="308,164,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passTextBox" HorizontalAlignment="Left" Margin="172,166,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="115,204,0,0" VerticalAlignment="Top" Click="onDeleteAccount"/>
    </Grid>
</Page>
